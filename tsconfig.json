{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "lib/**/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "builds",
    "e2e",
    "gulp",
    "node_modules"
  ]
}
