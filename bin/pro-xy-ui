#!/usr/bin/env node
//this is for sure not the best way to start NW application, but working
//TODO: find how to correctly build NW app

var path = require("path");
var cp = require("child_process");

var bin = path.resolve(__dirname, "../node_modules/.bin/electron");
if (/^win/.test(process.platform)) {
	bin += ".cmd";
}

var nwProcess = cp.spawn(bin, [
	path.resolve(__dirname, "..")
], {
	detached: true,
	stdio: "ignore",
	terminal: false
// env: Object.assign({
// 	CHROME_LOG_FILE: path.join(process.env.HOME, "pro-xy-logs/pro-xy-ui.log")
// }, process.env)
});
nwProcess.unref();
